<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bag"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.tkbs.chem.press.activity.SampleBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_45dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/tv_teacher_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:textColor="@color/text_main_3"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_teacher_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/one_key_approve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/margin_10dp"
            android:text="@string/one_key_approve"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:background="@color/cc_bk_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_gray"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:src="@mipmap/icon_search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:text="@string/text_search_hint"
                android:textColor="@color/text_main_6"
                android:textSize="@dimen/text_14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_1dp"
            android:background="@color/cc_bk_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_sort_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_sort_time"
                    style="@style/book_shelf_sort"
                    android:text="@string/sort_time" />

                <ImageView
                    android:id="@+id/img_sort_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:src="@mipmap/bookshelf_icon_up" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sort_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_sort_hot"
                    style="@style/book_shelf_sort"
                    android:text="@string/search_hot" />

                <ImageView
                    android:id="@+id/img_sort_hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:src="@mipmap/book_manage_arrow_down"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sort_book_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/tv_sort_book_name"
                    style="@style/book_shelf_sort"
                    android:text="@string/sort_book_name" />

                <ImageView
                    android:id="@+id/img_sort_book_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:src="@mipmap/book_manage_arrow_down"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sort_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/margin_5dp"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/tv_sort_state"
                    style="@style/book_shelf_sort"
                    android:text="@string/sort_state" />

                <ImageView
                    android:id="@+id/img_sort_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/margin_5dp"
                    android:src="@mipmap/book_manage_arrow_down" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <cn.lemon.view.RefreshRecyclerView
        android:id="@+id/recycler"
        android:layout_marginTop="@dimen/margin_1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
