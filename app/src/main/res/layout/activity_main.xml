<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.tkbs.chem.press.MainActivity">

    <include layout="@layout/titlebar_home" />

    <FrameLayout
        android:id="@+id/fl_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_weight="1">

    </FrameLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_50dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/group_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_50dp"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_main_tab"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbtn_tab_bookshelf"
                style="@style/main_tab"
                android:checked="false"
                android:drawableTop="@drawable/selector_btn_book_shelf"
                android:text="@string/home_table1" />

            <RadioButton
                android:id="@+id/rbtn_tab_bookcity"
                style="@style/main_tab"
                android:checked="true"
                android:drawableTop="@drawable/selector_btn_book_city"
                android:text="@string/home_table2" />

            <RadioButton
                android:visibility="gone"
                android:id="@+id/rbtn_tab_manage"
                style="@style/main_tab"
                android:drawableTop="@drawable/selector_btn_manage"
                android:text="@string/home_table3" />

            <RadioButton
                android:id="@+id/rbtn_tab_discover"
                style="@style/main_tab"
                android:drawableTop="@drawable/selector_btn_find"
                android:text="@string/discover" />

            <RadioButton
                android:id="@+id/rbtn_tab_mine"
                style="@style/main_tab"
                android:drawableTop="@drawable/selector_btn_my"
                android:text="@string/home_table4" />

        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="false"
            android:clickable="false"
            android:background="#00000000"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:focusable="false"
            android:background="#00000000"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:clickable="false"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:focusable="false"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:layout_marginRight="@dimen/margin_12dp"
            android:clickable="false"
            android:focusable="false"
            android:background="#00000000"
            android:visibility="visible" />

    </LinearLayout>
</RelativeLayout>

</LinearLayout>
