<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_1dp"
    android:background="@color/white"
    android:padding="@dimen/margin_10dp">

    <ImageView
        android:id="@+id/bookshelf_cover"
        android:layout_width="@dimen/margin_75dp"
        android:layout_height="@dimen/margin_85dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:singleLine="true"
            android:text="飞回我手里"
            android:textColor="@color/text_main_3"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_book_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:text="100点"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:text="2018-01-01"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_go_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="@dimen/margin_5dp"
        android:text="@string/go_pay"
        android:textColor="@color/text_red"
        android:textSize="@dimen/text_12sp" />

    <TextView
        android:id="@+id/tv_delete_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_5dp"
        android:padding="@dimen/margin_5dp"
        android:text="@string/delete_order"
        android:textColor="@color/text_main_6"
        android:textSize="@dimen/text_12sp" />
</LinearLayout>
