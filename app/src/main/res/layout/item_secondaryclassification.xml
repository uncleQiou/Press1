<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_8dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_home_type_h"
        android:background="@color/bg_main_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:text="|"
            android:textColor="@color/cc_bluelight"
            android:textSize="@dimen/text_20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的定制"
            android:textColor="@color/text_main_3"
            android:textSize="@dimen/text_18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_more"
            android:textColor="@color/cc_bluelight" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10dp"
            android:src="@mipmap/bookcity_icon_more" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_book1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_book_cover1"
                android:layout_width="@dimen/margin_100dp"
                android:layout_height="@dimen/margin_100dp"
                android:layout_margin="@dimen/margin_5dp"
                android:src="@drawable/ic_default_image" />

            <TextView
                android:id="@+id/tv_book_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_main_6"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_book2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_book_cover2"
                android:layout_width="@dimen/margin_100dp"
                android:layout_height="@dimen/margin_100dp"
                android:layout_margin="@dimen/margin_5dp"
                android:src="@drawable/ic_default_image" />

            <TextView
                android:id="@+id/tv_book_name2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_main_6"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_book3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_book_cover3"
                android:layout_width="@dimen/margin_100dp"
                android:layout_height="@dimen/margin_100dp"
                android:layout_margin="@dimen/margin_5dp"
                android:src="@drawable/ic_default_image" />

            <TextView
                android:id="@+id/tv_book_name3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_main_6"
                android:textSize="@dimen/text_16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
