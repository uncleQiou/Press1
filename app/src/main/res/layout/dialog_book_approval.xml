<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/conner_rectangle_white"
    android:orientation="vertical"
    android:padding="@dimen/margin_10dp">

    <TextView
        android:id="@+id/tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_opinion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/miaobian_normal"
        android:gravity="start"
        android:hint="@string/give_opinion"
        android:minHeight="@dimen/margin_75dp"
        android:padding="@dimen/margin_10dp"
        android:textColor="@color/text_main_3"
        android:textColorHint="@color/text_main_6"
        android:textSize="@dimen/text_14sp" />

    <LinearLayout
        android:id="@+id/ll_time_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valid_date"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:background="@drawable/miaobian_normal"
            android:paddingBottom="@dimen/margin_5dp"
            android:paddingLeft="@dimen/margin_10dp"
            android:paddingRight="@dimen/margin_10dp"
            android:paddingTop="@dimen/margin_5dp"
            android:text="三个月"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/miaobian_normal"
            android:drawableRight="@mipmap/book_manage_arrow_down"
            android:padding="@dimen/margin_5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_no_via"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/miaobian_normal"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"
            android:text="@string/no_via"
            android:textColor="@color/hg_app_main_color"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_via"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/miaobian_normal"
            android:gravity="center"
            android:padding="@dimen/margin_10dp"
            android:text="@string/via"
            android:textColor="@color/hg_app_main_color"
            android:textSize="@dimen/text_16sp" />
    </LinearLayout>
</LinearLayout>
