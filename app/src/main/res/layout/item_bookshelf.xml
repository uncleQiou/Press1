<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_1dp"
    android:background="@color/white"
    android:padding="@dimen/margin_10dp">

    <CheckBox
        android:id="@+id/cb_select_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:button="@drawable/selector_btn_blue"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="@dimen/margin_5dp"
        android:textColor="@color/text_main_3"
        android:textSize="@dimen/text_12sp" />

    <ImageView
        android:id="@+id/bookshelf_cover"
        android:layout_width="@dimen/margin_75dp"
        android:layout_height="@dimen/margin_85dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_default_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:singleLine="true"
            android:text="飞回我手里"
            android:textColor="@color/text_main_3"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_buy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:text="订单时间：100"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_book_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:text="页数：100"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_12sp" />

        <TextView
            android:id="@+id/tv_book_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5dp"
            android:text="截止时间。。。。"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:background="@drawable/rounded_rectangle_blue"
        android:paddingBottom="@dimen/margin_5dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_5dp"
        android:text="@string/str_download"
        android:textColor="@color/hg_app_main_color"
        android:textSize="@dimen/text_15sp" />
</LinearLayout>
