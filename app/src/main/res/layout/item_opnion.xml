<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:padding="@dimen/margin_10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_opinion_who"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/text_main_6"
        android:textSize="@dimen/text_14sp" />

    <TextView
        android:id="@+id/tv_opinion_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_main_6"
        android:textSize="@dimen/text_14sp" />
</LinearLayout>


    <TextView
        android:id="@+id/tv_opinion_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_main_3"
        android:paddingTop="@dimen/margin_10dp"
        android:paddingBottom="@dimen/margin_10dp"
        android:textSize="@dimen/text_15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_1dp"
        android:background="@color/cc_bk_dark" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/reply_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:background="@drawable/conner_gray"
        android:padding="@dimen/margin_10dp"
        android:text="@string/reply_platform"
        android:textColor="@color/text_main_6"
        android:textSize="@dimen/text_15sp" />
</LinearLayout>
