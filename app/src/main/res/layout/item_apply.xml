<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10dp"
    android:layout_marginRight="@dimen/margin_10dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="@dimen/margin_10dp">

    <ImageView
        android:id="@+id/img_apply_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/apply_round_1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/margin_8dp">

        <TextView
            android:id="@+id/tv_apply_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_main_3"
            android:textSize="@dimen/text_16sp" />

        <TextView
            android:id="@+id/tv_apply_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:textColor="@color/text_main_6"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_apply_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_apply_state"
        android:paddingBottom="@dimen/margin_5dp"
        android:paddingLeft="@dimen/margin_10dp"
        android:paddingRight="@dimen/margin_10dp"
        android:paddingTop="@dimen/margin_5dp"
        android:text="@string/apply_watting"
        android:textColor="@color/white"
        android:textSize="@dimen/text_16sp" />
</LinearLayout>
